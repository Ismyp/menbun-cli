{%- comment -%}
  Features-Sektion - 4 Icons mit Beschreibungen
  - Premium Sublimation | Individuelle Designs | Schnelle Lieferung | Profi-Qualität
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
    padding: 100px 0;
    position: relative;
    overflow: hidden;
  }

  /* Subtle Background Pattern */
  #shopify-section-{{ section.id }}::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 20px 20px, rgba(163, 230, 53, 0.05) 1px, transparent 1px);
    background-size: 40px 40px;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .features-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    position: relative;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(20px) saturate(150%);
    -webkit-backdrop-filter: blur(20px) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 24px;
    padding: 40px 24px;
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(30px);
  }

  #shopify-section-{{ section.id }} .feature-item.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  #shopify-section-{{ section.id }} .feature-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 50px 0 rgba(31, 38, 135, 0.2);
    border-color: rgba(163, 230, 53, 0.3);
  }

  /* Icon Container mit Gradient */
  #shopify-section-{{ section.id }} .feature-icon {
    width: 72px;
    height: 72px;
    margin-bottom: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    background: linear-gradient(135deg, #a3e635 0%, #65a30d 100%);
    border-radius: 20px;
    color: #ffffff;
    box-shadow: 0 8px 20px rgba(163, 230, 53, 0.3);
    transition: all 0.3s ease;
  }

  #shopify-section-{{ section.id }} .feature-item:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 12px 30px rgba(163, 230, 53, 0.5);
  }

  #shopify-section-{{ section.id }} .feature-icon svg {
    width: 36px;
    height: 36px;
    fill: currentColor;
  }

  #shopify-section-{{ section.id }} .feature-title {
    font-size: 18px;
    font-weight: 700;
    color: #000000;
    margin-bottom: 12px;
    line-height: 1.3;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .feature-description {
    font-size: 15px;
    color: #64748b;
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  /* Staggered Animation Delays */
  #shopify-section-{{ section.id }} .feature-item:nth-child(1) {
    transition-delay: 0s;
  }
  #shopify-section-{{ section.id }} .feature-item:nth-child(2) {
    transition-delay: 0.1s;
  }
  #shopify-section-{{ section.id }} .feature-item:nth-child(3) {
    transition-delay: 0.2s;
  }
  #shopify-section-{{ section.id }} .feature-item:nth-child(4) {
    transition-delay: 0.3s;
  }

  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }
  }

  @media (max-width: 640px) {
    #shopify-section-{{ section.id }} {
      padding: 60px 0;
    }
    
    #shopify-section-{{ section.id }} .features-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    #shopify-section-{{ section.id }} .feature-item {
      padding: 32px 20px;
    }
  }
{%- endstyle -%}

