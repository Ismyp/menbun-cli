{%- style -%}
  #shopify-section-{{ section.id }} {
    background: #ffffff;
    padding: 80px 0;
    border-top: 1px solid #f1f5f9;
  }

  #shopify-section-{{ section.id }} .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  #shopify-section-{{ section.id }} .testimonials-header {
    text-align: center;
    margin-bottom: 60px;
  }

  #shopify-section-{{ section.id }} .testimonials-title {
    font-size: 32px;
    font-weight: 800;
    color: #000000;
    margin: 0 0 10px 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  #shopify-section-{{ section.id }} .testimonial-card {
    background: #ffffff;
    border-radius: 12px;
    padding: 32px 24px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    border: 1px solid #f1f5f9;
    text-align: center;
    transition: all 0.25s ease;
  }

  #shopify-section-{{ section.id }} .testimonial-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  #shopify-section-{{ section.id }} .testimonial-stars {
    display: flex;
    justify-content: center;
    gap: 4px;
    margin-bottom: 20px;
  }

  #shopify-section-{{ section.id }} .star {
    width: 20px;
    height: 20px;
    color: #fbbf24;
  }

  #shopify-section-{{ section.id }} .testimonial-text {
    font-size: 15px;
    color: #374151;
    line-height: 1.5;
    margin: 0 0 20px 0;
    font-style: italic;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .testimonial-author {
    font-size: 14px;
    font-weight: 600;
    color: #000000;
    margin: 0 0 4px 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .testimonial-role {
    font-size: 12px;
    color: #64748b;
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      max-width: 500px;
      margin: 0 auto;
    }
  }
{%- endstyle -%}

