{%- style -%}
  #shopify-section-{{ section.id }} {
    background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
    padding: 100px 0;
    position: relative;
    overflow: hidden;
  }

  /* Decorative Gradient Blob */
  #shopify-section-{{ section.id }}::before {
    content: '';
    position: absolute;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(163, 230, 53, 0.1) 0%, transparent 70%);
    top: -300px;
    right: -200px;
    border-radius: 50%;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    position: relative;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .testimonials-header {
    text-align: center;
    margin-bottom: 60px;
  }

  #shopify-section-{{ section.id }} .testimonials-title {
    font-size: clamp(28px, 4vw, 40px);
    font-weight: 800;
    color: #000000;
    margin: 0 0 16px 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  #shopify-section-{{ section.id }} .testimonial-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px) saturate(150%);
    -webkit-backdrop-filter: blur(20px) saturate(150%);
    border-radius: 24px;
    padding: 40px 32px;
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.5);
    text-align: center;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(30px);
    position: relative;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .testimonial-card.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Gradient Hover Effect */
  #shopify-section-{{ section.id }} .testimonial-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(163, 230, 53, 0.05) 0%, rgba(101, 163, 13, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  #shopify-section-{{ section.id }} .testimonial-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 20px 50px 0 rgba(31, 38, 135, 0.2);
    border-color: rgba(163, 230, 53, 0.3);
  }

  #shopify-section-{{ section.id }} .testimonial-card:hover::before {
    opacity: 1;
  }

  /* Staggered Animation Delays */
  #shopify-section-{{ section.id }} .testimonial-card:nth-child(1) {
    transition-delay: 0s;
  }
  #shopify-section-{{ section.id }} .testimonial-card:nth-child(2) {
    transition-delay: 0.15s;
  }
  #shopify-section-{{ section.id }} .testimonial-card:nth-child(3) {
    transition-delay: 0.3s;
  }

  #shopify-section-{{ section.id }} .testimonial-stars {
    display: flex;
    justify-content: center;
    gap: 6px;
    margin-bottom: 24px;
    position: relative;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .star {
    width: 24px;
    height: 24px;
    color: #fbbf24;
    transition: transform 0.3s ease;
  }

  #shopify-section-{{ section.id }} .testimonial-card:hover .star {
    transform: scale(1.2);
  }

  #shopify-section-{{ section.id }} .testimonial-text {
    font-size: 16px;
    color: #374151;
    line-height: 1.7;
    margin: 0 0 24px 0;
    font-style: italic;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    position: relative;
    z-index: 1;
  }

  /* Quote Icon */
  #shopify-section-{{ section.id }} .testimonial-text::before {
    content: '"';
    font-size: 60px;
    color: rgba(163, 230, 53, 0.2);
    position: absolute;
    top: -20px;
    left: -10px;
    font-family: Georgia, serif;
    line-height: 1;
  }

  #shopify-section-{{ section.id }} .testimonial-author {
    font-size: 16px;
    font-weight: 700;
    color: #000000;
    margin: 0 0 6px 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    position: relative;
    z-index: 1;
  }

  #shopify-section-{{ section.id }} .testimonial-role {
    font-size: 14px;
    color: #64748b;
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    position: relative;
    z-index: 1;
  }

  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      max-width: 600px;
      margin: 0 auto;
    }

    #shopify-section-{{ section.id }} .testimonial-card {
      padding: 32px 24px;
    }
  }

  @media (max-width: 640px) {
    #shopify-section-{{ section.id }} {
      padding: 60px 0;
    }
  }
{%- endstyle -%}

