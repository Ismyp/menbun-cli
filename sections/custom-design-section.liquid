  Individuelles Design Sektion - Links Text, rechts 6 Trikot-Designs
  Genau nach Screenshot Design
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    padding: 80px 0;
    position: relative;
  }
  
  #shopify-section-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(163, 230, 53, 0.3) 50%, transparent 100%);
  }

  #shopify-section-{{ section.id }} .custom-design-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 80px;
    align-items: center;
  }

  #shopify-section-{{ section.id }} .custom-design-content {
    padding-right: 40px;
  }

  #shopify-section-{{ section.id }} .custom-design-title {
    font-size: 32px;
    font-weight: 800;
    color: #ffffff;
    margin: 0 0 20px 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .custom-design-text {
    font-size: 16px;
    color: #d1d5db;
    line-height: 1.5;
    margin: 0 0 32px 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .custom-design-features {
    list-style: none;
    padding: 0;
    margin: 0 0 32px 0;
  }

  #shopify-section-{{ section.id }} .custom-design-features li {
    font-size: 15px;
    color: #e5e7eb;
    margin-bottom: 8px;
    padding-left: 20px;
    position: relative;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .custom-design-features li:before {
    content: "✓";
    position: absolute;
    left: 0;
    color: #a3e635;
    font-weight: bold;
  }

  #shopify-section-{{ section.id }} .custom-design-button {
    background: linear-gradient(135deg, #a3e635 0%, #65a30d 100%);
    color: #ffffff;
    border: none;
    padding: 12px 24px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .custom-design-button:hover {
    background: #16a34a;
    transform: translateY(-1px);
    color: #ffffff;
  }

  #shopify-section-{{ section.id }} .custom-design-gallery {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }

  #shopify-section-{{ section.id }} .design-item {
    aspect-ratio: 1;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    background: #f8fafc;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shopify-section-{{ section.id }} .design-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .design-item-1 {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  }

  #shopify-section-{{ section.id }} .design-item-2 {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
  }

  #shopify-section-{{ section.id }} .design-item-3 {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  }

  #shopify-section-{{ section.id }} .design-item-4 {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  }

  #shopify-section-{{ section.id }} .design-item-5 {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  }

  #shopify-section-{{ section.id }} .design-item-6 {
    background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  }

  #shopify-section-{{ section.id }} .design-mockup {
    width: 60px;
    height: 80px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    font-weight: 700;
    color: #1f2937;
  }

  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} .custom-design-container {
      grid-template-columns: 1fr;
      gap: 50px;
      text-align: center;
    }
    
    #shopify-section-{{ section.id }} .custom-design-content {
      padding-right: 0;
    }
  }

  @media (max-width: 640px) {
    #shopify-section-{{ section.id }} .custom-design-gallery {
      grid-template-columns: repeat(2, 1fr);
    }
  }
{%- endstyle -%}

<section class="custom-design-container">
  <div class="custom-design-content">
    <h2 class="custom-design-title">{{ section.settings.title }}</h2>
    <p class="custom-design-text">{{ section.settings.description }}</p>
    
    <ul class="custom-design-features">
      <li>{{ section.settings.feature1 }}</li>
      <li>{{ section.settings.feature2 }}</li>
      <li>{{ section.settings.feature3 }}</li>
    </ul>
    
    <a href="{{ section.settings.button_link | default: '#' }}" class="custom-design-button">
      {{ section.settings.button_text }}
    </a>
  </div>

  <div class="custom-design-gallery">
    <div class="design-item">
      {% if section.settings.design_image_1 != blank %}
        <img src="{{ section.settings.design_image_1 | image_url: width: 300 }}" alt="Design 1" loading="lazy" width="300" height="300">
      {% else %}
        <div class="design-mockup">FC</div>
      {% endif %}
    </div>
    <div class="design-item">
      {% if section.settings.design_image_2 != blank %}
        <img src="{{ section.settings.design_image_2 | image_url: width: 300 }}" alt="Design 2" loading="lazy" width="300" height="300">
      {% else %}
        <div class="design-mockup">23</div>
      {% endif %}
    </div>
    <div class="design-item">
      {% if section.settings.design_image_3 != blank %}
        <img src="{{ section.settings.design_image_3 | image_url: width: 300 }}" alt="Design 3" loading="lazy" width="300" height="300">
      {% else %}
        <div class="design-mockup">10</div>
      {% endif %}
    </div>
    <div class="design-item">
      {% if section.settings.design_image_4 != blank %}
        <img src="{{ section.settings.design_image_4 | image_url: width: 300 }}" alt="Design 4" loading="lazy" width="300" height="300">
      {% else %}
        <div class="design-mockup">7</div>
      {% endif %}
    </div>
    <div class="design-item">
      {% if section.settings.design_image_5 != blank %}
        <img src="{{ section.settings.design_image_5 | image_url: width: 300 }}" alt="Design 5" loading="lazy" width="300" height="300">
      {% else %}
        <div class="design-mockup">12</div>
      {% endif %}
    </div>
    <div class="design-item">
      {% if section.settings.design_image_6 != blank %}
        <img src="{{ section.settings.design_image_6 | image_url: width: 300 }}" alt="Design 6" loading="lazy" width="300" height="300">
      {% else %}
        <div class="design-mockup">9</div>
      {% endif %}
    </div>
  </div>
</section>

