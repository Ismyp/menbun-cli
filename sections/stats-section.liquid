{%- style -%}
  #shopify-section-{{ section.id }} {
    background: #ffffff;
    padding: 60px 0;
  }

  #shopify-section-{{ section.id }} .stats-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  #shopify-section-{{ section.id }} .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 60px;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  #shopify-section-{{ section.id }} .stat-number {
    font-size: 42px;
    font-weight: 800;
    color: #000000;
    line-height: 1;
    margin-bottom: 6px;
    letter-spacing: -0.025em;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .stat-label {
    font-size: 14px;
    color: #64748b;
    font-weight: 400;
    line-height: 1.3;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .stats-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    #shopify-section-{{ section.id }} .stat-number {
      font-size: 36px;
    }
  }
{%- endstyle -%}

<section class="stats-container">
  <div class="stats-grid">
    <div class="stat-item">
      <div class="stat-number">{{ section.settings.stat1_number }}</div>
      <div class="stat-label">{{ section.settings.stat1_label }}</div>
    </div>
    
    <div class="stat-item">
      <div class="stat-number">{{ section.settings.stat2_number }}</div>
      <div class="stat-label">{{ section.settings.stat2_label }}</div>
    </div>
    
    <div class="stat-item">
      <div class="stat-number">{{ section.settings.stat3_number }}</div>
      <div class="stat-label">{{ section.settings.stat3_label }}</div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Statistiken",
  "tag": "section",
  "class": "stats-section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "stat1_number",
      "label": "Statistik 1 - Zahl",
      "default": "5000+"
    },
    {
      "type": "text",
      "id": "stat1_label",
      "label": "Statistik 1 - Beschreibung",
      "default": "Zufriedene Kunden"
    },
    {
      "type": "text",
      "id": "stat2_number",
      "label": "Statistik 2 - Zahl",
      "default": "4.9/5"
    },
    {
      "type": "text",
      "id": "stat2_label",
      "label": "Statistik 2 - Beschreibung",
      "default": "Kundenbewertung"
    },
    {
      "type": "text",
      "id": "stat3_number",
      "label": "Statistik 3 - Zahl",
      "default": "10+"
    },
    {
      "type": "text",
      "id": "stat3_label",
      "label": "Statistik 3 - Beschreibung",
      "default": "Jahre Erfahrung"
    }
  ],
  "presets": [
    {
      "name": "Statistiken"
    }
  ]
}
{% endschema %}
