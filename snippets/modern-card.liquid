{%- comment -%}
  MODERNE CARD KOMPONENTE
  Glassmorphism & Soft Shadow Style
  
  VERWENDUNG: {% render 'modern-card', title: 'Title', style: 'glass' %}
  
  Wird verwendet in:
  - sections/modern-hero.liquid
  - Wiederverwendbare Komponente f√ºr alle Templates
  
  Parameter:
  - title: Card Titel
  - description: Card Beschreibung
  - image: Image Object
  - url: Link URL
  - style: 'default' | 'glass' | 'elevated'
  - hover_effect: 'lift' | 'glow' | 'scale'
{%- endcomment -%}

{% liquid
  assign card_title = title | default: 'Card Title'
  assign card_description = description
  assign card_image = image
  assign card_url = url
  assign card_style = style | default: 'default'
  assign card_hover = hover_effect | default: 'lift'
%}

{%- style -%}
  .modern-card {
    position: relative;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    display: block;
  }

  /* Default Style - Clean & Modern */
  .modern-card--default {
    background: #ffffff;
    border-radius: 24px;
    padding: 32px;
    box-shadow: 0 2px 15px -3px rgba(0, 0, 0, 0.07), 0 10px 20px -2px rgba(0, 0, 0, 0.04);
  }

  /* Glass Style - Glassmorphism */
  .modern-card--glass {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px) saturate(150%);
    -webkit-backdrop-filter: blur(20px) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 24px;
    padding: 32px;
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
  }

  /* Elevated Style - Strong Shadow */
  .modern-card--elevated {
    background: #ffffff;
    border-radius: 24px;
    padding: 32px;
    box-shadow: 0 10px 40px -15px rgba(0, 0, 0, 0.2);
  }

  /* Hover Effects */
  .modern-card--hover-lift:hover {
    transform: translateY(-12px);
    box-shadow: 0 20px 50px -15px rgba(0, 0, 0, 0.3);
  }

  .modern-card--hover-glow:hover {
    box-shadow: 0 0 40px rgba(163, 230, 53, 0.4);
  }

  .modern-card--hover-scale:hover {
    transform: scale(1.05);
  }

  /* Card Image */
  .modern-card__image {
    width: 100%;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 20px;
  }

  .modern-card__image img {
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .modern-card:hover .modern-card__image img {
    transform: scale(1.1);
  }

  /* Card Content */
  .modern-card__content {
    position: relative;
    z-index: 2;
  }

  .modern-card__title {
    font-size: 24px;
    font-weight: 700;
    color: #000000;
    margin: 0 0 12px 0;
    line-height: 1.3;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  .modern-card--glass .modern-card__title {
    color: #ffffff;
  }

  .modern-card__description {
    font-size: 15px;
    color: #64748b;
    line-height: 1.6;
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  .modern-card--glass .modern-card__description {
    color: rgba(255, 255, 255, 0.9);
  }

  /* Gradient Overlay */
  .modern-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(163, 230, 53, 0.1) 0%, rgba(101, 163, 13, 0.1) 100%);
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .modern-card:hover .modern-card__overlay {
    opacity: 1;
  }

  /* Badge */
  .modern-card__badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, #a3e635 0%, #65a30d 100%);
    color: #ffffff;
    padding: 6px 12px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
    z-index: 3;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .modern-card--default,
    .modern-card--glass,
    .modern-card--elevated {
      padding: 24px;
      border-radius: 20px;
    }

    .modern-card__title {
      font-size: 20px;
    }
  }
{%- endstyle -%}

{% if card_url != blank %}
  <a href="{{ card_url }}" class="modern-card modern-card--{{ card_style }} modern-card--hover-{{ card_hover }}" data-animate>
{% else %}
  <div class="modern-card modern-card--{{ card_style }} modern-card--hover-{{ card_hover }}" data-animate>
{% endif %}

  <div class="modern-card__overlay"></div>

  {% if card_image != blank %}
    <div class="modern-card__image">
      {{ card_image | image_url: width: 600 | image_tag: loading: 'lazy', width: 600 }}
    </div>
  {% endif %}

  <div class="modern-card__content">
    <h3 class="modern-card__title">{{ card_title }}</h3>
    {% if card_description != blank %}
      <p class="modern-card__description">{{ card_description }}</p>
    {% endif %}
  </div>

{% if card_url != blank %}
  </a>
{% else %}
  </div>
{% endif %}

